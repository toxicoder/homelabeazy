apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: pihole-ingress
  namespace: pihole
  annotations:
    kubernetes.io/ingress.class: traefik-external
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`pihole.{{ domain }}`)
      kind: Rule
      services:
        - name: pihole-web
          port: 80
      middlewares:
        - name: authelia-forward-auth
          namespace: security
  tls:
    secretName: "{{ lookup('community.hashi_vault.vault_read', 'secret/homelab/pihole/tls') }}"
