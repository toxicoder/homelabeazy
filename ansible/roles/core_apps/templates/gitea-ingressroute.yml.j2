apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: gitea-ingress
  namespace: gitea
  annotations:
    kubernetes.io/ingress.class: traefik-external
spec:
  entryPoints:
    - websecure
  routes:
    - match: Host(`gitea.{{ domain }}`)
      kind: Rule
      services:
        - name: gitea-http
          port: 3000
      middlewares:
        - name: authelia-forward-auth
          namespace: security
  tls:
    secretName: "{{ lookup('community.hashi_vault.vault_read', 'secret/homelab/gitea/tls') }}"
